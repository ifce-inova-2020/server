generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  type     String
  name     String
  email    String @unique
  password String
  campus   String

  @@unique([id, email])
  @@map("users")
}

model ConsumerCSV {
  id        String   @id @default(uuid())
  createdAt String
  m_pa_p    Float?
  m_pa_fp   Float?
  m_pr_p    Float?
  m_pr_fp   Float?
  wrists    Wrist[]
}

model Wrist {
  id    Int @id @default(autoincrement())
  pa_p  Int
  pa_fp Int
  pr_p  Int
  pr_fp Int

  consumerCSVId String

  ConsumerCSV ConsumerCSV? @relation(fields: [consumerCSVId], references: [id])
}
